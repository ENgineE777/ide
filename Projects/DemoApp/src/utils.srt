	string res;
	for (int i = 0, size = str.length(); i < size; ++i)
	{
		// %
		if (str[i] == 0x25)
		{
			int ch = (str[i+1] - 0x30) << 4;
			int tmp = str[i+2];
			if (tmp >= 0x30 && tmp <= 0x39)
			{
				ch += tmp - 0x30;
			}
			if (tmp >= 0x41 && tmp <= 0x46)
			{
				ch += tmp - 0x41 + 10;
			}
			i += 2;

			char2str(ch, res);
		}
		else
		{
			char2str(str[i], res);
		}
	}
	str = res;
}

