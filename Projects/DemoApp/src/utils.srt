	int pos = 0;
	uint from = 0;
	while ( (pos = str.findFirst(delim, from)) >= 0 )
	{
		arr.insertLast(str.substr(from, pos - from));
		from = pos + delim.length();
	}

	if (from < str.length())
	{
		arr.insertLast(str.substr(from));
	}

	if (arr.isEmpty())
	{
		arr.insertLast(str);
	}

	return arr;
