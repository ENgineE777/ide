float round(float x)
{
	float sgn = x < 0.0f ? -1.0f : 1.0f;
	return sgn * floor(abs(x) + 0.5f);
}

float roundeps(float x, float eps = 0.01f)
{
	const float inv_eps = 1.0f / eps;
	return eps * floor((x * inv_eps) + 0.5f);
}

